<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.psawicki.payleven.ui.MainActivity">

    <fragment
        android:name="de.psawicki.payleven.ui.CatalogFragment"
        android:id="@+id/fragment_products"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:layout="@layout/fragment_catalog" />

    <fragment
        android:name="de.psawicki.payleven.ui.BasketFragment"
        android:id="@+id/fragment_basket"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:layout="@layout/fragment_basket" />

</LinearLayout>
